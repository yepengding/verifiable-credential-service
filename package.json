{
  "name": "verifiable-crendential-service",
  "version": "0.0.9",
  "description": "A lightweight service providing verifiable credential functionalities.",
  "main": "src/main.ts",
  "scripts": {
    "build": "yarn tsc",
    "start": "node dist/main.js",
    "watch": "yarn tsc --watch",
    "dev": "concurrently -k \"yarn tsc --watch\" \"sleep 2.5 && nodemon -q dist/main.js\"",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "keywords": [
    "verifiable credential",
    "verifiable presentation",
    "self sovereign identity",
    "decentralized identitifier",
    "digital identity management"
  ],
  "author": "Yepeng Ding <yepengding@g.ecc.u-tokyo.ac.jp>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.1",
    "graphql": "^15.7.2",
    "jose": "^4.9.3",
    "json-schema": "^0.4.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.5.0",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.6",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/json-schema": "^7.0.11",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.40",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.6",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.3"
  }
}
